@model tagur.Models.MainViewModel

@{
    ViewData["Title"] = "tagur :: Connect(); //2016";
}

@{Html.RenderPartial("Navbars/Index", Model);}
@{Html.RenderPartial("Sidebars/Index", Model);}

<div id="fullpage">

    <div class="site-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
             
                    <h1 class="heading heading_lg">
                        Welcome to <span class="text-primary">tagur</span>
                    </h1>

                    <p class="heading__sub">
                        A fully cross-platform .NET Core experiment.
                    </p>

                    <div class="text-center">

                        <a asp-fragment="portfolio" class="btn btn-xl btn-primary">
                            <span class="oi oi-arrow-right" title="Find out more" aria-hidden="true"></span>
                            <span>Get started</span>
                        </a>

                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="site-wrapper">
        <div class="container">

            <div class="center-div">

                <div>
                    <i style="font-size:84pt;" class="fa fa-cloud-upload" aria-hidden="true"></i>
                </div>
                <div>
                    <span class="about-item__content">
                        Want to have your photos automatically captioned and tagged?
                    </span>
                </div>

                <form action="~/Home/UploadImageAsync" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm" style="width: 100%; height: 100%; background: none; border: none;">
                    <input type="hidden" name="latitude" id="latitude" value="0.0" />
                    <input type="hidden" name="longitude" id="longitude" value="0.0" />
                </form>

            </div>

        </div>
    </div>

    <div class="site-wrapper">
        <div class="container">

            @{Html.RenderPartial("AboutContent", Model);}

        </div>
    </div>

</div>





