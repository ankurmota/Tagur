@model tagur.Models.MainViewModel
<!-- NAVBAR
   ============================== -->
<div class="navbar navbar-default navbar__initial navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a title="Currently running on @Html.DisplayFor(o => o.OsDescription)" class="navbar-brand" asp-fragment="welcome"><i style="margin-top:-15px;margin-right:5px;font-size:24px" class="fa fa-@Html.DisplayFor(o => o.OsLabel)" aria-hidden="true"></i></a>
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" asp-fragment="welcome"><img style="margin-top:-10px" height="32" src="~/assets/img/tagur_sm.png" /></a>

        </div>
        <div class="navbar-collapse collapse">
            <ul class="fullpage__nav nav navbar-nav navbar-right">
                <li data-menuanchor="welcome"><a asp-fragment="welcome">Welcome</a></li>
                <li data-menuanchor="portfolio"><a asp-fragment="portfolio">Get Started</a></li>
                <li data-menuanchor="about"><a asp-fragment="about">About</a></li>
                <li><a href="/api/auth/home?UserId=@Html.DisplayFor(o => o.User.id)">@Html.DisplayFor(o => o.User.givenName)</a></li>
                <li><a asp-controller="Home" asp-action="Search" asp-fragment="welcome"><i class="fa fa-search" aria-hidden="true"></i></a></li>

                <li><a asp-controller="Home" asp-action="Reports" asp-fragment="welcome"><i class="fa fa-area-chart" aria-hidden="true"></i></a></li>

            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>